<h2>User info</h2>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
  <div id="error_explanation">
	<h3><%= pluralize(@user.errors.count, "error") %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
  </div>
<% end %>
<!-- エラーメッセージ表示-->

<label>name</label>
<%= f.text_field :name %>

<label>Image</label>
<%= f.attachment_field :profile_image %>

<label>Introduction</label>
<%= f.text_area :introduction %>

<%= f.submit "Update User" %>
<% end %>